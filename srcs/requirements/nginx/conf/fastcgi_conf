
# nginx can route request to FASTCGI servers which run applications built with frameworks and programming language such as PHP.

# QUERY_STRING : used to pass request parameters.

http{
	server{
		fastcgi_pass  localhost:9000;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_param QUERY_STRING    $query_string;
	}
}

